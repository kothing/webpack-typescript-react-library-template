{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
    "module": "esnext",
    "target": "es5",
    "noEmit": false,
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/src/", "./index.tsx"],
  "exclude": ["./node_modules", "./build", "./dist", "./lib", "./.vscode"]
}
